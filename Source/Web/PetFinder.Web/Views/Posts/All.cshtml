@model PetFinder.Web.ViewModels.Posts.AllPageViewModel

<h2 class="text-primary">Всички публикации</h2>

<div class="row">
    <div class="col-md-4 col-md-offset-8">
        @using (Html.BeginForm("All", "Posts", FormMethod.Get))
        {
            <p>
                <b>Области</b>
                @Html.DropDownList("Region")
                <input type="submit" value="Търси" class="btn btn-default" />
            </p>
        }
    </div>
</div>

@for (int i = 0; i < Model.Posts.Count; i++)
{
    <div class="row">
        @Html.DisplayFor(m => m.Posts[i])
    </div>
}

<nav>
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li>
                <a href="/Posts/All/@(Model.CurrentPage - 1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }
        @for (int i = 1; i < Model.TotalPages; i++)
        {
            var className = string.Empty;
            if (Model.CurrentPage == i)
            {
                className = "active";
            }
            <li class="@className"><a href="/Posts/All/@i">@i</a></li>
        }
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li>
                <a href="/Posts/All/@(Model.CurrentPage+1)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }
    </ul>
</nav>